<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#3d3c3c">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/j1"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enviar"
        android:src="@drawable/j1iz"
        android:layout_marginTop="85dp"
        android:id="@+id/btn_izquierda"
        android:background="#3d3c3c"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enviar"
        android:src="@drawable/j1ar"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btn_arriba"
        android:background="#3d3c3c"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"
            android:src="@drawable/j1ab"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/btn_abajo"
            android:background="#3d3c3c"
            />

</LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enviar"
        android:src="@drawable/j1de"
        android:layout_marginTop="85dp"
        android:id="@+id/btn_derecha"
        android:background="#3d3c3c"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enviar"
        android:src="@drawable/j1fue"
        android:id="@+id/btn_fuego"
        android:background="#3d3c3c"        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="40dp"
        />

</LinearLayout>

</LinearLayout>